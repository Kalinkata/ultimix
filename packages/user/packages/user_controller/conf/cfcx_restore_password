call_params_filter=restore_password:integer,value_1
get_post_filter=rlogin:set
get_post_validation=rlogin:string,err_msg_login_must_be_filled
custom_validation=login_exists:rlogin
success_func=restore_password
global_success_message=password_was_restored
auto_redirect=1
redirection_page=./password_restoration_complete.html